# copy some extra files to /lib/udev
#
#
#

mkdir -p $DESTDIR/lib/udev

[ -f /lib/udev/write_cd_rules ]  && cpifexists /lib/udev/write_cd_rules    /lib/udev
[ -f /lib/udev/write_net_rules ] && cpifexists /lib/udev/write_net_rules   /lib/udev

[ -f /lib/udev/udev_run_devd ]    && cpifexists /lib/udev/udev_run_devd      /lib/udev
[ -f /lib/udev/udev_run_hotplug ] && cpifexists /lib/udev/udev_run_hotplug   /lib/udev
[ -f /lib/udev/logger.agent ]     && cpifexists /lib/udev/logger.agent       /lib/udev


# new udev > 111
[ -f /lib/udev/rule_generator.functions ]  && cpifexists /lib/udev/rule_generator.functions      /lib/udev

[ -f $DESTDIR/etc/udev/rules.d/70-persistent-net.rules ] && rm -f /etc/udev/rules.d/70-persistent-net.rules
