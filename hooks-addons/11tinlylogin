# hooks addon of tinylogin
# need tinylogin


if [ ! -d /usr/share/doc/tinylogin ]; then
        echo "WARNING"
        echo ""
        echo "   Please install tinylogin package to allow to create"
        echo "   users and groups, and set ttys."
        echo ""
        echo "  # apt-get install tinylogin"
        echo ""
else

 stat_before
 cpifexists /usr/lib/tinylogin/bin/tinylogin /bin/
 
 cpifexists /etc/securetty /etc
 # /etc/issue is created in hooks-addons/tcos

 stat_after "Tinylogin"

fi
