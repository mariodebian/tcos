# hook for windows rdesktop

if [ ! -e /usr/bin/rdesktop ]; then
  _echo "   * rDesktop not installed"
else
  stat_before
    cpifexists /usr/bin/rdesktop   /usr/bin/
    mkdir -p $DESTDIR/usr/share/
    copydir  /usr/share/rdesktop/  /usr/share/

cat << EOF > $DESTDIR/sbin/startrdesktop
#!/bin/sh

. /conf/tcos.conf
. /conf/tcos-run-functions
SERVER=\$(get_server)
export DISPLAY=:0
export HOME=/root

if [ -f \$XAUTHORITY ]; then
  TCOS_XORG_OPTS="\$TCOS_XORG_OPTS -auth $XAUTHORITY"
fi

Xorg \${TCOS_XORG_OPTS}  >> /tmp/initramfs.debug 2>&1 &

sleep 2

# default server
RDESKTOP_SERVER=\$(read_cmdline_var "rdesktop" "\${SERVER}")
RDESKTOP_CMD="/usr/bin/rdesktop -5 -u \"\" -f -a 16 -k es \${RDESKTOP_SERVER}"

# FIXME spanish keyboard
# -r sound
# -u "" # empty username
# -f -a 16 fullscreen and 16 color bits
while [ 1 ]; do
  xterm -e "echo Connecting with \" \${RDESKTOP_SERVER}...\" ; sleep 1 ; \${RDESKTOP_CMD} >/dev/null 2>&1; echo \"Connection closed.\"; sleep 2"
done

EOF

chmod +x $DESTDIR/sbin/startrdesktop

# old redesktop cmd
#/usr/bin/rdesktop -5 -f -a 16 -k es -T "Remotedesktop-Client: \${rdesktop}" \${rdesktop} > /dev/null 2>&1
stat_after "rDesktop"
fi
