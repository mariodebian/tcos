if [ -f /tmp/vga_vendor ]; then
  VENDOR=$(cat /tmp/vga_vendor)
else

#VENDOR=$(lspci -nn| awk '/VGA/ {if ( $(NF-1) == "(rev" ){print $(NF-2)} else print $NF }'| sed -e 's/\[//g' -e 's/\]//g' | tr [a-z] [A-Z] | awk -F":" '{print $1}')
VENDOR=$(lspci -nn| grep VGA | grep -E -o '[0-9a-z]{4}\:[0-9a-z]{4}' | tr [a-z] [A-Z] | awk -F":" '{print $1}')
echo "$VENDOR" > /tmp/vga_vendor
fi


if [ "$1" != "" ]; then
  if [ "$(echo $1| tr [a-z] [A-Z])" = "$VENDOR" ]; then
    echo "1"
  else
    echo "0"
  fi
  exit 0
fi

echo $VENDOR
