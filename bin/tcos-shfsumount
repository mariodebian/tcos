#!/bin/bash
# umount remote shfs

. /etc/tcos/initramfs.conf
. ${TCOS_DIR}/shfscommon.sh

if [ $(is_remote) = 0 ]; then
  echo "No remote connection"
  exit 0
fi

if [ $(is_mounted) = 0 ]; then
  echo "${mounpoint} not mounted"
  exit 0
fi

# umount
shfsumount ${mountpoint}

# delete mountpoint (not force)
rmdir ${mountpoint}


exit 0
